<!DOCTYPE html>
<html>
	<head>
		<title>{{ page_title }}</title>
		<meta
			name="facebook-domain-verification"
			content="jfwpgp1krhpqk1afhti607owoywzgb"
		/>
		<script
			src="https://code.jquery.com/jquery-3.6.0.min.js"
			integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
			crossorigin="anonymous"
		></script>
		<link
			rel="icon"
			href="https://cdn.shopify.com/s/files/1/0570/5482/2588/files/icon.png?v=1625835412"
			type="image/x-icon"
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap"
			rel="stylesheet"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css"
			integrity="sha512-17EgCFERpgZKcm0j0fEq1YCJuyAWdz9KUtv1EjVuaOz8pDnh/0nZxmU6BBXwaaxqoi9PQXnRWqlcDB027hgv9A=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		/>
		<link
			rel="stylesheet"
			type="text/css"
			href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"
		/>

		<script
			type="text/javascript"
			src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"
		></script>
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta name="description" content="{{ page_description | escape }}" />
		<link rel="canonical" href="{{ canonical_url }}" />
		<meta
			name="viewport"
			content="width=device-width,initial-scale=1,shrink-to-fit=no"
		/>
		{{
			content_for_header
		}}
		<!-- Header hook for plugins -->
		{{
			'application.css' | asset_url | stylesheet_tag
		}}
		{{
			'application.js' | asset_url | script_tag
		}}
	</head>
	<body>
		<nav class="nav">
			<div class="nav__image">
				<img
					src="{{ images['cobb.png'] | img_url: '100x100' }}"
					alt="Cobb Coffee Logo"
				/>
			</div>
			<div class="menu-links">
				{% for link in linklists.main-menu.links %} {% assign child_list_handle
				= link.title | handleize %} {% if linklists[child_list_handle].links !=
				blank %}
				<a href="{{ link.url }}">{{ link.title }}</a>
				[{% for childlink in linklists[child_list_handle].links %}
				<a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
				{% endfor %}] {% else %}
				<a href="{{ link.url }}">{{ link.title }}</a>
				{% endif %} {% endfor %}
			</div>

			<div class="icons">
				{% if shop.customer_accounts_enabled %} {% if customer %}
				<a href="/account"
					><img
						src="{{ images['user.png'] | img_url: '40x40' }}"
						alt="User Account"
				/></a>
				{{ 'log out' | customer_logout_link }}
				{% else %}
				<a href="/account/login">
					<img
						src="{{ images['user.png'] | img_url: '40x40' }}"
						alt="User Account"
				/></a>
				{% endif %} {% endif %}
				<a href="/cart"
					><img
						src="{{ images['shoppingbag.png'] | img_url: '40x40' }}"
						alt="User Account"
				/></a>
			</div>
		</nav>
		<header id="main-header">
			<div class="nav__image">
				<img
					src="{{ images['cobb.png'] | img_url: '100x100' }}"
					alt="Cobb Coffee Logo"
				/>
			</div>
			<div class="icons">
				{% if shop.customer_accounts_enabled %} {% if customer %}
				<a href="/account"
					><img
						src="{{ images['user.png'] | img_url: '40x40' }}"
						alt="User Account"
				/></a>
				{{ 'log out' | customer_logout_link }}
				{% else %}
				<a href="/account/login">
					<img
						src="{{ images['user.png'] | img_url: '40x40' }}"
						alt="User Account"
				/></a>
				{% endif %} {% endif %}
				<a href="/cart"
					><img
						src="{{ images['shoppingbag.png'] | img_url: '40x40' }}"
						alt="User Account"
				/></a>
			</div>
			<div class="container">
				<input
					type="checkbox"
					id="nav-toggle"
					class="nav-toggle"
				/><!-- Using the different states of the checkbox as an activator for the mobile menu - checked and not checked -->
				<nav id="menu">
					<ul>
						{% for link in linklists.main-menu.links %} {% assign
						child_list_handle = link.title | handleize %} {% if
						linklists[child_list_handle].links != blank %}
						<a href="{{ link.url }}">{{ link.title }}</a>
						[{% for childlink in linklists[child_list_handle].links %}
						<a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
						{% endfor %}] {% else %}
						<a href="{{ link.url }}">{{ link.title }}</a>
						{% endif %} {% endfor %}
					</ul>
				</nav>
				<label for="nav-toggle" class="nav-toggle-label">
					<span></span>
				</label>
			</div>
		</header>
		<main role="main">
			{{ content_for_layout }}
		</main>
	</body>
</html>
