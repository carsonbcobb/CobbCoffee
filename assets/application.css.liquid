  text-align: center;
  margin-bottom: 100px;
}

.cart--end {
  justify-content: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.subtotal {
  font-size: 1.75rem;
}

.empty {
  height: 100%;
  text-align: center;
  padding-bottom: 200px;
}
@media (max-width: 425px) {
  .cart--info img {
    max-width: 150px;
  }

  .cart--info input {
    width: 100px;
  }

  .button--group {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    flex-direction: column;
  }
