}

.login-section {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: flex-start;
  margin-top: 50px;
}

.login,
.forgot,
.register {
  text-align: center;
}

.login form,
.forgot form,
.register form {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.account-page__img img {
  max-width: 100%;
}

.login label,
.forgot label,
.register label {
  margin: 15px 0;
}

.login input,
.forgot input,
.register input {
  margin-bottom: 15px;
  height: 25px;
  width: 300px;
  border-radius: 10px;
}

.btn-login {
  width: 300px;
  height: unset !important;
}

@media (max-width: 425px) {
  .login-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 50px;
  }
}

/* CART */
.cart {
  padding: 25px;
}

