/* Collection */

.collection-title {
  font-weight: 900;
  font-size: 55px;
  line-height: 66px;
  text-align: center;
  margin-bottom: 50px;
}

.collection {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
}

.grid-product {
  flex-direction: column;
  margin: 25px;
  padding: 15px;
  background-size: cover;
  background-repeat: no-repeat;
  border-radius: 5px;
}

.grid-product--content {
  margin-left: 0;
  text-align: center;
}

.grid-product--subtitle {
  font-size: 26px;
}
.grid-product--title {
  font-size: 32px;
}

.collection--image img {
  max-width: 100%;
}

@media (max-width: 768px) {
  .collection {
    grid-template-columns: 1fr 1fr;
  }
}

@media (max-width: 425px) {
  .collection {
    grid-template-columns: 1fr;
  }
}

/* LOGIN */

