html {
  display: flex;
  justify-content: center;
  background-color: #b2744d79;
}

body {
  background: #252121;
  color: white;
  margin: 0;
  padding: 0;
  max-width: 1440px !important;
  font-family: "Roboto", sans-serif;
  width: 100% !important;
}

ul {
  padding-left: 0;
}

li {
  list-style-type: none;
}

a {
  text-decoration: none;
}

.bold {
  font-weight: bold;
}

/* NAV */

.nav {
  padding: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}

.nav a {
  color: white;
}

.icons img {
  margin: 0 15px;
}

.menu-links {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;

  width: 450px;
}

/* Hero */

.hero {
  background: url("https://cdn.shopify.com/s/files/1/0570/5482/2588/files/hero.png?v=1624929156");
  color: #252121;
  padding: 200px 0;
  background-size: cover;
  background-repeat: no-repeat;
  width: 100%;
}

.hero__container {
  margin-left: 100px;
  margin-top: -50px;
}

.hero__header {
  font-weight: normal;
  font-size: 55px;
  line-height: 66px;
}

.hero__text {
  font-style: normal;
  font-weight: normal;
  font-size: 25px;
  line-height: 36px;
}

@media (max-width: 1024px) {
  .hero {
    padding: 100px 0;
    background-size: contain;
    width: 100%;
  }

  .hero__container {
    margin-left: 10px;
    margin-top: -50px;
  }

  .hero__header {
    font-size: 42px;
  }

  .hero__text {
    font-size: 21px;
  }
}
@media (max-width: 768px) {
  .hero__container {
    margin-left: 10px;
    margin-top: -100px;
  }

  .hero__header {
    font-size: 32px;
  }

  .hero__text {
    font-size: 18px;
    background-color: #fde9d9b6;
    border-radius: 10px;
    width: fit-content;
    padding: 20px;
  }
}

@media (max-width: 425px) {
  .hero {
    background: url("https://cdn.shopify.com/s/files/1/0570/5482/2588/files/heroMobile.png?v=1625835127") !important;
    background-size: contain;
    height: 600px;
    background-repeat: no-repeat;
  }

  .hero__container {
    margin-left: 0px;
    margin-top: 190px;
  }
  .hero__header {
    font-size: 36px;
    line-height: 72px;
    padding-left: 25px;
    font-weight: 900;
  }

  .hero__text {
    background-color: transparent;
    font-size: 24px;
    font-weight: lighter;
    border-radius: 10px;

    margin-top: 25px;
  }

  .mobile {
    display: block !important;
  }

  .desktop {
    display: none;
  }
}

.mobile {
  display: none;
}

/* About */

.about {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 50px 0;
  padding: 50px 100px;
}

.about__content {
  padding-left: 50px;
}

.about__content--header {
  font-style: normal;
  font-weight: lighter;
  font-size: 55px;
  line-height: 66px;
}

.about__content--li {
  margin: 25px 0;
  font-weight: lighter;
  font-size: 16px;
  line-height: 143.87%;
}

@media (max-width: 1024px) {
  .about__image img {
    max-width: 400px;
  }

  .about__content--header {
    font-size: 42px;
  }
}

@media (max-width: 768px) {
  .about {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0 50px;
  }
}

@media (max-width: 425px) {
  .about {
    margin-top: 50px;
    padding: 0 25px;
  }

  .about__content {
    padding-left: 0px;
  }
}

/* Bullets */

.bullets {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  padding: 50px 150px;

  background: url("https://cdn.shopify.com/s/files/1/0570/5482/2588/files/bullet-bg.png?v=1624931858");
  background-size: cover;
  background-repeat: no-repeat;
}

.bullets__item {
  padding: 25px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: start;
}

.item__image {
  margin-right: auto;
}

.item__header {
  font-style: normal;
  font-weight: lighter;
  font-size: 35px;
  line-height: 42px;
}

.item__text {
  font-style: normal;
  font-weight: lighter;
  font-size: 16px;
  line-height: 143.87%;
}
@media (max-width: 1024px) {
  .bullets {
    padding: 50px;
  }

  .item__header {
    font-size: 28px;
  }
}

@media (max-width: 768px) {
  .bullets {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    padding: 50px;
  }

  .bullets__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .item__image {
    margin: auto;
  }
}

/* Banner */

.banner__image img {
  max-width: 100%;
}

/* Product */

.product {
  margin: 50px 0;
}

.product__header {
  text-align: center;
  font-style: normal;
  font-weight: lighter;
  font-size: 55px;
  line-height: 66px;
  /* identical to box height */
  margin-bottom: 75px;
  color: #ffffff;
}

.product__main {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.product__main--content {
  margin-left: 100px;
}

.column {
  display: flex;
  flex-direction: column;
}

.subtitle {
  font-style: normal;
  font-size: 42px;
  color: #ffffff;
  line-height: 66px;
  margin-top: -50px;
  font-weight: lighter;
}
.title {
  font-style: normal;
  font-size: 63px;
  color: #ffffff;
  line-height: 66px;
}

.price,
.quantity {
  font-style: normal;
  font-weight: lighter;
  font-size: 21px;
  line-height: 143.87%;
  margin-bottom: 15px;
  color: #ffffff;
}

.quantity {
  font-weight: lighter;
}

.input {
  width: 100%;
  background: transparent;
  color: white;
  border-right: none;
  border-bottom: 1px solid white;
  font-size: 18px;
}

.btn-product {
  font-weight: 900;
  font-size: 20px;
  line-height: 143.87%;
  color: #ffffff;
  width: 100%;
  padding: 25px 0;
  background-color: transparent;
  border: 1px solid white;
  border-radius: 10px;
  margin-top: 25px;
  transition: 0.35s ease;
  cursor: pointer;
}

.btn-product:hover {
  color: #252121;
  background-color: white;
  border: 1px solid transparent;
}

.subproduct {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  align-content: center;
  margin-top: 150px;
  text-align: center;
}

.subproduct__title,
.subproduct__subtitle {
  font-style: normal;
  font-weight: lighter;
  font-size: 22px;
  line-height: 26px;
  text-align: center;

  color: #ffffff;
}

.subproduct__image {
  display: flex;
  justify-content: center;
  align-items: center;
}

.subproduct__price {
  font-size: 16px;
  color: #ffffff;
}

@media (max-width: 768px) {
  .product__main--image img {
    max-width: 300px;
  }

  .subproduct__image img {
    max-width: 200px;
  }
}

@media (max-width: 425px) {
  .product__header {
    text-align: center;
    font-style: normal;
    font-weight: lighter;
    font-size: 48px;
    line-height: 66px;
  }

  .product__main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .product__main--content {
    margin-left: 0;
  }

  .subproduct {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    align-content: center;
    margin-top: 150px;
    text-align: center;
  }
}

/* testimonials */

.testimonials {
  padding: 50px 150px;
}

.testimonials__header {
  font-style: normal;
  font-weight: lighter;
  font-size: 55px;
  line-height: 66px;
  /* identical to box height */

  text-align: center;

  color: #ffffff;
}

.testimonial__text {
  font-style: normal;
  font-weight: lighter;
  font-size: 21px;
  line-height: 153.37%;
  /* or 25px */

  text-align: center;
  padding: 0 25px;
  color: #ffffff;
}

.testimonial__person {
  font-style: normal;
  font-weight: normal;
  font-size: 24px;
  line-height: 153.37%;
  /* identical to box height, or 31px */

  text-align: center;
  letter-spacing: 0.05em;
  margin-top: -50px;
  color: #ededed;
}

.slider--item {
  text-align: center;
}

.slick-dots li button:before {
  color: #73717179 !important;
}

.slick-dots li.slick-active button:before {
  color: #737171 !important;
}

.slider--item-text {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.quote {
  font-family: cursive;
  font-style: normal;
  font-weight: normal;
  font-size: 110px;
  line-height: 153.37%;
  /* or 138px */

  text-align: center;
  letter-spacing: 0.05em;

  color: #ffffff;

  opacity: 0.3;
}

.quote-end {
  transform: translateY(35%);
}

@media (max-width: 1024px) {
  .testimonials {
    padding: 50px 0;
  }
}

@media (max-width: 425px) {
  .testimonials__header {
    font-size: 48px;
  }

  .testimonial__text {
    font-size: 18px;
  }

  .slider--item-text {
    padding: 10px;
  }
}

/* Guarantee */

.guarantee {
  background: url("https://cdn.shopify.com/s/files/1/0570/5482/2588/files/guarantee.png?v=1625312203");
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  height: 600px;
  margin: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.guarantee__text {
  padding-left: 50px;
}

.guarantee h2 {
  font-style: normal;
  font-weight: lighter;
  font-size: 55px;
  line-height: 66px;

  color: #ffffff;
}

.guarantee p {
  font-style: normal;
  font-weight: normal;
  font-size: 21px;
  line-height: 153.37%;
  /* or 38px */

  color: #ffffff;
}

@media (max-width: 1024px) {
  .guarantee__text {
    padding-left: 30px;
  }
}

@media (max-width: 768px) {
  .guarantee h2 {
    font-size: 48px;
  }

  .guarantee p {
    font-size: 17.5px;
  }

  .guarantee__text {
    padding-left: 10px;
  }
}

/* Footer */

.footer {
  background: url("https://cdn.shopify.com/s/files/1/0570/5482/2588/files/footer.png?v=1624941589");
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.footer__bg {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.95);
  padding: 25px 0;
}

.footer__sections p {
  font-weight: normal;
  font-size: 16px;
  line-height: 153.37%;
}

.footer__image {
  display: flex;
  justify-content: center;
}

.footer__image img {
  max-width: 150px;
  margin-bottom: 25px;
}

.footer__sections {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}

.footer__sections h3 {
  font-size: 30px;
  line-height: 36px;
}

.footer__image--trust img {
  max-width: 300px;
}

.footer__image--trust,
.copy {
  margin-top: 100px;
}

.copy p {
  transform: translateY(100%);
}

@media (max-width: 768px) {
  .footer__sections h3 {
    font-size: 21px;
  }
  .footer__sections p {
    font-size: 14px;
  }
}

@media (max-width: 425px) {
  .footer__sections {
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
  }
